<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#424242</item>
        <item name="colorPrimaryDark">#1b1b1b</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonA">
        <item name="android:background">#F44336</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ButtonB">
        <item name="android:background">#4CAF50</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ButtonC">
        <item name="android:background">#2196F3</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ButtonD">
        <item name="android:background">#FFEB3B</item>
    </style>

    <style name="QuestionNumber">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="answerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
